<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="milqaa.student.agh.edu.pl.sysopysymulator.mainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/clock"
        android:layout_width="382dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:text="Clock"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="56sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startClock"
        android:text="@string/start"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        android:layout_marginLeft="128dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resetClock"
        android:text="@string/restet"
        android:layout_marginRight="128dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/clock" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopClock"
        android:text="@string/stop"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        app:layout_constraintRight_toLeftOf="@+id/resetButton"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/startButton"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
